            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Save the access token to environment variable",
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.environment.set(\"access_token\", jsonData.access_token);",
                                    "    pm.environment.set(\"role_id\", jsonData.role_id);",
                                    "    console.log(\"✅ Token saved:\", jsonData.access_token);",
                                    "    console.log(\"✅ Role ID:\", jsonData.role_id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
